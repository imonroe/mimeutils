{
    "name": "imonroe/mime-utils",
    "type": "library",
    "description": "A helper for working with MIME types, particularly for validating uploads.",
    "keywords": [
        "imonroe",
        "mime-utils"
    ],
    "homepage": "https://github.com/imonroe/mime-utils",
    "license": "MIT",
    "authors": [
        {
            "name": "Ian Monroe",
            "email": "ian@ianmonroe.com",
            "homepage": "https://github.com/imonroe",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "imonroe\\mime-utils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "imonroe\\mime-utils\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
